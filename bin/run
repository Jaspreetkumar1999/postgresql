#!/usr/bin/env node

const http = require('http');
const Sequelize = require('sequelize');
const config = require('../config')[process.env.NODE_ENV || 'development'];

const log = config.log();
const App = require('../app');
const sequelize = new Sequelize(config.postgres.options);
async function connectToPostgres(){
return await sequelize.authenticate().then(() =>{
     log.info("Connection Build");
   }).catch((err)=>{
     log.error("Unable to connect", err);
   });

  
}

connectToPostgres().then(data => {
config.postgres.client = data;
const app = App(config);
const port = process.env.PORT || 3000;
// app.set("port", port)
const server = http.createServer(app);


server.listen(process.env.PORT || 3000);

server.on('listening', () => {
  log.info(
    `Hi there! I'm listening on port ${server.address().port} in ${app.get('env')} mode.`,
  );
});
})
// console.log("config.postgres.client",config.postgres.client)

